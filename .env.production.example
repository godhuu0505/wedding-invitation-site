# 本番環境用環境変数
# Firebase設定
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# 結婚式情報
NEXT_PUBLIC_GROOM_NAME_EN=GroomName
NEXT_PUBLIC_BRIDE_NAME_EN=BrideName
NEXT_PUBLIC_WEDDING_DATE=2025-12-01
NEXT_PUBLIC_WEDDING_TIME=15:00
NEXT_PUBLIC_WEDDING_VENUE=Wedding Venue Name
NEXT_PUBLIC_WEDDING_ADDRESS=Wedding Venue Address

# 本番環境フラグ
NODE_ENV=production
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
